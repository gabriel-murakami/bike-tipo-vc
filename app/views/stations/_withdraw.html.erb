<div class="bikes">
  <% station.bikes.each do |bike| %>
    <div class="bike">
      ID: <%= bike.id  %>
      <% if bike.status == 'damaged' %>
        <i class="material-icons damaged">highlight_off</i>
      <% else %>
        <i class="material-icons available">check_circle_outline</i>
      <% end %>
      <div class="withdraw_button">
        <% if bike.status == 'available' %>
          <%= button_to "Alugar", trips_path, method: :post, params: { bike_id: bike.id, station_id: station.id, service: 'withdraw' } %>
        <% elsif bike.status == 'on_trip' %>
          <% @stations.each do |station| %>
            <%= button_to "Devolver para #{station.name}", trips_path, method: :post, params: { bike_id: bike.id, station_id: station.id, service: 'devolution' } %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
